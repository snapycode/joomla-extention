<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.7" method="upgrade">
    <name>Raj Social-Profile</name>
    <author>Raj Kumar Das</author>
    <creationDate>August 2012</creationDate>
    <copyright>Copyright (C) 2012  - All rights reserved.</copyright>
    <authorEmail></authorEmail>
    <authorUrl>http://www.snapycode.org/</authorUrl>
    <version>1</version>
    <license>GPL, See LICENSE</license>
    <description>
        	RajSocialProfile is a Joomla 1.6,1.7,2.5 module created by Raj Kumar Das. It allows your visitors to visit you social profile page.	
    </description>
  
    <files>
        <filename module="mod_rajsocialprofile">mod_rajsocialprofile.php</filename>
		<folder>icons</folder>
    </files>
	<config>	
		<fields name="params">
		    <fieldset name='basic'>
		     

        <field name="facebook" type="radio" default="0" label="Enable Facebook?" description="If you choose yes then provide your profile name">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </field>
		
		<field name="facebook_profile" type="text" default="" label="Facebook Profile" />
			
        <field name="twitter" type="radio" default="0" label="Enable Twitter?" description="Do we need to allow twitter profile?">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </field>
		
		<field name="twitter_profile" type="text" default="" label="Twitter Profile" />
			
        <field name="google" type="radio" default="0" label="Enable Google Plus?" description="Do we need to allow Google profile?">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </field>
		
		<field name="google_profile" type="text" default="" label="Google Profile" />
			
        <field name="linkedin" type="radio" default="0" label="Enable Linkedin?" description="Do we need to allow linkedin profile?">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </field>
		
		<field name="linkedin_profile" type="text" default="" label="Linkedin Profile" />	
		
		<field name="youtube" type="radio" default="0" label="Enable Youtube?" description="Do we need to allow Youtube sharing?">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </field>
		
		<field name="youtube_profile" type="text" default="" label="Youtube Profile" />
		
		<field name="pre_text" type="textarea" default="" rows="10" cols="35" label="Pre Text" />
		
    	</fieldset>
	</fields>
</config>
</extension>
